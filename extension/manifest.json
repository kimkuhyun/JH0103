{
  "manifest_version": 3,
  "name": "CareerOS Collector",
  "version": "3.0",
  "description": "채용 공고 원클릭 캡처 및 AI 분석",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "unlimitedStorage",
    "tabs",
    "debugger"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["toast.css"]
    }
  ],
  "commands": {
    "one-click-capture": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "공고 원클릭 캡처 및 분석"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["toast.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
