{
  "manifest_version": 3,
  "name": "CareerOS Collector",
  "version": "1.0",
  "description": "채용 공고 원클릭 캡처 및 AI 분석",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "debugger",
    "downloads",
    "webNavigation"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "http://localhost:8080/*",
    "*://*.saramin.co.kr/*",
    "*://*.jobkorea.co.kr/*",
    "*://*.wanted.co.kr/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "start_capture": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "현재 공고 즉시 분석 시작"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["toast.css"],
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["toast.css"],
      "matches": ["<all_urls>"]
    }
  ]
}